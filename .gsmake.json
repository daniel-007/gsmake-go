{
    "name":"github.com/gsmake/gsmake",

    "import" : [
        {"name" : "github.com/gsdocker/gsos","version":"v2.0"},
        {"name" : "github.com/gsdocker/gserrors","version":"v2.0"},
        {"name" : "github.com/gsdocker/gslogger","version":"v2.0"}
    ],

    "task" : {

        "setup" : {
            "scope":"bootstrap",
            "description":"setup gsmake"
        },

        "list" : {
            "description":"list tasks"
        },

        "atom" : {
            "description":"config golang atom environment,and start it."
        },

        "cache" : {
            "description":"add current package into global cache"
        },

        "discache":{
            "description":"remove current package from global cache"
        },

        "update":{
            "description":"update packages"
        }
    },

    "properties":{
        "gsmake.declare.scopes":["task","golang"]
    }
}
